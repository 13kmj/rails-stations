<div>
  <div>
    <p>予約作成</p>
    <% if flash[:alert] %>
      <div class="alert alert-danger"><%= flash[:alert] %></div>
    <% end %>

    <div>
      <%= form_with model: [:admin, @reservation_new] do |form|%>
        <div>
          <%= form.label :name, '予約者' %>
          <%= form.collection_select :user_id, User.all, :id, :user_information, prompt: "ユーザを選択してください" %>
        </div>

        <div>
          <%= form.label :movie_id, '予約映画タイトル' %>
          <%= form.select :movie_id, options_from_collection_for_select(@movies, :id, :name) %>
        </div>

        <div>
          <%= form.label :screen_id, '劇場・スクリーン' %>
          <%= form.collection_select :screen_id, Screen.all, :id, :screen_theater_name, prompt: "劇場・スクリーンを選択してください" %>
        </div>

        <div>
          <%= form.label :date, '予約日' %>
          <%= form.date_field :date %>
        </div>

        <div>
          <%= form.label :schedule_id, '予約スケジュール' %>
          <%= form.select :schedule_id, options_from_collection_for_select(@schedules, :id, :id), {} %>
        </div>

        <div>
          <%= form.label :sheet_id, '座席' %>
          <%= form.select :sheet_id, options_from_collection_for_select(@sheets, :id, :id), {} %>
        </div>

        <%= form.submit "予約", class: 'btn btn-primary mt-3'%>
      <% end %>
    </div>
  </div>
</div>