<h1>Edit Schedule</h1>

<%= form_with(model: [:admin, @schedule], local: true) do |form| %>
  <div class="field">
    <label>開始時刻:</label>
    <%= form.time_field :start_time, required: true %>
  </div>

  <div class="field">
    <label>終了時刻:</label>
    <%= form.time_field :end_time, required: true %>
  </div>

  <div class="actions">
    <%= form.submit "Update Schedule" %>
  </div>
<% end %>

<%= link_to 'Back', admin_schedules_path %>
<%= link_to 'Delete', admin_schedule_path(@schedule),
            method: :delete,
            data: { confirm: 'スケジュールを削除します' },
            class: 'delete-btn' %>