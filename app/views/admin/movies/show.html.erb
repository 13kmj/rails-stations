<h1><%= @movie.name %></h1>

<p>
  <img src="<%= @movie.image_url %>" alt="Movie poster" width="400" height="400">
</p>

<p>
  <strong>ID:</strong>
  <%= @movie.id %>
</p>

<p>
  <strong>概要:</strong>
  <%= @movie.description %>
</p>

<p>
  <strong>公開年:</strong>
  <%= @movie.year %>
</p>

<h2>上映スケジュール</h2>
<table>
<thead>
  <tr>
    <th>ID</th>
    <th>作品ID</th>
    <th>上映日</th>
    <th>開始時刻</th>
    <th>終了時刻</th>
    <th>劇場・スクリーン</th>
    <th>作成日時</th>
    <th>更新日時</th>
  </tr>
</thead>
<tbody>
  <% @movie.schedules.each do |schedule| %>
    <tr>
      <td><%= link_to schedule.id, admin_schedule_path(schedule) %></td>
      <td><%= schedule.movie_id %></td>
      <td><%= schedule.date %></td>
      <td><%= schedule.start_time.strftime("%H:%M:%S") %></td>
      <td><%= schedule.end_time.strftime("%H:%M:%S") %></td>
      <td><%= schedule.screen.screen_theater_name %></td>
      <td><%= schedule.created_at %></td>
      <td><%= schedule.updated_at %></td>
    </tr>
  <% end %>
</tbody>
</table>

