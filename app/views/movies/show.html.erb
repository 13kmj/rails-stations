<% flash.each do |key, message| %>
  <div class="<%= key %>"><%= message %></div>
<% end %>

<h1><%= @movie.name %></h1>
<p><%= @movie.description %></p>
<p><img src="<%= @movie.image_url %>" alt="Movie poster"></p>

<h2>映画詳細</h2>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>公開年</th>
      <th>上映中</th>
      <th>概要</th>
      <th>画像URL</th>
      <th>登録日時</th>
      <th>更新日時</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= link_to @movie.id %></td>
      <td><%= @movie.name %></td>
      <td><%= @movie.year %></td>
      <td><%= @movie.is_showing ? '上映中' : '上映予定' %></td>
      <td><%= @movie.description %></td>
      <td><%= @movie.image_url %></td>
      <td><%= @movie.created_at %></td>
      <td><%= @movie.updated_at %></td>
    </tr>
  </tbody>
</table>

<h2>上映スケジュール</h2>
<table>
  <thead>
    <tr>
      <th>開始時刻</th>
      <th>終了時刻</th>
    </tr>
  </thead>
  <tbody>
    <% @movie.schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.start_time %></td>
        <td><%= schedule.end_time %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>予約する</h2>
<%= form_with url: reservation_movie_path(movie_id: @movie.id), method: :get, local: true do |form| %>
  <div>
  <label>上映スケジュール:</label>
  <%= form.collection_select :schedule_id, @movie.schedules, :id, :start_time %>
</div>
  <div>
    <label>日付:</label>
    <%= form.select :date, (Date.today..(Date.today + 7.days)).map { |date| [date.strftime('%Y-%m-%d'), date] }, { selected: Date.today } %>
  </div>
  <%= form.button '座席を予約する', type: 'submit', name: nil, class: 'btn btn-primary' %>
<% end %>
